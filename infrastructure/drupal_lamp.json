{
  "db": {
      "driver": "mysql",
      "client_recipe": "mysql::client",
      "root": "root",
      "grant_hosts": [
        "localhost"
      ],
      "users": {
        "root": "root",
        "replication": "replication",
        "debian": "debian"
      }
  },
  "server": {
      "web_user": "www-data",
      "web_group": "www-data",
      "assets": "/srv/assets",
      "theme_default": "mydcsd",
      "base": "/srv/www"
  },
  "php": {
    "directives": {
      "memory_limit": "2048M",
      "upload_max_filesize": "200M",
      "post_max_size": "210M"
    },
    "conf_dir" : "/etc/php5/apache2"
  },
  "apache": {
    "prefork": {
      "startservers": "5",
      "minspareservers": "5",
      "maxspareservers": "10",
      "maxclients": "23",
      "serverlimit": "23",
      "keepalive": "On",
      "keepalivetimeout": "4",
      "maxkeepaliverequests": "1000"
    }
  },
  "drupal": {
      "sites": {
          "soha": {
              "active": true,
              "deploy": {
                  "action": "clean",
                  "releases": 1
              },
              "drupal": {
                  "version": 7.23,
                  "install": {
                      "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
                      "--clean-url": 1
                  },
                  "settings": {
                      "profile": "minimal",
                      "files": "sites/default/files",
                      "custom": "sites/default/example.settings.php",
                      "settings": "sites/default/settings.php",
                      "cookbook": "drupal",
                      "template": "example.settings.php.erb",
                      "db_name": "soha",
                      "db_host": "localhost",
                      "db_prefix": "",
                      "db_driver": "mysql"
                  }
              },
              "repository": {
                  "host": "github.com",
                  "uri": "git@github.com:jordanlgraham/soha.git",
                  "revision": "ftp"
              },
              "web_app": {
                "80": {
                  "server_name": "soha.local",
                  "rewrite_engine": "On",
                  "docroot": "/srv/www/soha/current"
                },
                "443": {
                  "server_name": "soha.local",
                  "server_aliases": ["soha.local"],
                  "error_log": "/var/log/apache2/error.log",
                  "transfer_log": "/var/log/apache2/ssl_access_log",
                  "log_level": "warn",
                  "ssl": {
                    "ssl_engine": "on",
                    "ssl_protocol": ["all", "-SSLv2"],
                    "ssl_cipher_suite": ["ALL", "!ADH", "!EXPORT", "!SSLv2", "RC4+RSA", "+HIGH", "+MEDIUM", "+LOW"],
                    "ssl_certificate_file": "/usr/var/ssl/certs/server.crt",
                    "ssl_certificate_key_file": "/usr/var/ssl/certs/server.key"
                  },
                  "set_env_if": ["SetEnvIf User-Agent \".*MSIE.*\" nokeepalive ssl-unclean-shutdown downgrade-1.0 force-response-1.0"],
                  "custom_log": "\"|/usr/bin/logger -t httpd -p local6.info\" combined",
                  "rewrite_engine": "On",
                  "docroot": "/srv/www/soha/current"
                }
              }
          }
      }
  }
}