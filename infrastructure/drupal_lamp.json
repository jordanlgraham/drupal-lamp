{
  "db": {
      "driver": "mysql",
      "client_recipe": "mysql::client",
      "root": "root",
      "grant_hosts": [
        "localhost"
      ],
      "users": {
        "root": "root",
        "replication": "replication",
        "debian": "debian"
      }
  },
  "server": {
      "web_user": "www-data",
      "web_group": "www-data",
      "assets": "/srv/assets",
      "theme_default": "mydcsd",
      "base": "/srv/www"
  },
  "php": {
    "directives": {
      "memory_limit": "2048M",
      "upload_max_filesize": "200M",
      "post_max_size": "210M"
    },
    "conf_dir" : "/etc/php5/apache2"
  },
  "apache": {
    "prefork": {
      "startservers": "5",
      "minspareservers": "5",
      "maxspareservers": "10",
      "maxclients": "23",
      "serverlimit": "23",
      "keepalive": "On",
      "keepalivetimeout": "4",
      "maxkeepaliverequests": "1000"
    }
  },
  "drupal": {
      "sites": {
          "csm": {
              "active": true,
              "deploy": {
                  "action": "clean",
                  "releases": 1
              },
              "drupal": {
                  "version": 6.22,
                  "install": {
                      "install_configure_form.update_status_module": "'array(FALSE,FALSE)'",
                      "--clean-url": 1
                  },
                  "settings": {
                      "profile": "minimal",
                      "files": "sites/default/files",
                      "custom": "sites/default/example.settings.php",
                      "settings": "sites/default/settings.php",
                      "cookbook": "drupal",
                      "template": "example.settings.php.erb",
                      "db_name": "csm",
                      "db_host": "localhost",
                      "db_prefix": "",
                      "db_driver": "mysql"
                  }
              },
              "repository": {
                  "host": "github.com",
                  "uri": "git@github.com:jordanlgraham/csm.git",
                  "revision": "master"
              },
              "web_app": {
                "80": {
                  "server_name": "csm.local",
                  "rewrite_engine": "On",
                  "docroot": "/srv/www/csm/current"
                }
              }
          }
      }
  }
}